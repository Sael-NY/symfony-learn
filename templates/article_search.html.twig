{% extends "base.html.twig" %}
    {% block megatitle %} Search article {% endblock megatitle %}

{%block main %}


        <h1>Résultat de recherche pour "{{ search }}" :</h1>

    <h2>Articles</h2>
    {% for article in articles %}
        <article class="article-container" >
            <h2>{{ article.title }}</h2>
            <a href="{{ path("article_show", {id: article.id}) }}">Voir le produit</a>
            <img src={{ article.image }}>
            <h3>Il y a {{articles | length}} articles actuellement </h3>
        </article>
    {% endfor %}

    <h2>Categories</h2>
    {% for category in categories %}
        <article class="article-container" style="background-color: {{ category.color }}">
            <h2>{{ category.title }}</h2>
            <a href="{{ path("category_show", {id: category.id}) }}">Voir les détails</a>
            <h3>Il y a {{category | length}} catégories actuellement </h3>
        </article>
    {% endfor %}
{%endblock main %}
