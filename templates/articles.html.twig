    {% extends "base.html.twig" %}
    {% block megatitle %} Articles {% endblock megatitle %}




    {% block main %}

    {% for article in articles %}
        <article class="article-container" >
            <h2>{{ article.title }}</h2>
            <a href="{{ path("article_show", {id: article.id}) }}">Voir le produit</a>
            <img src={{ article.image }}>
            <h3>Il y a {{articles | length}} articles actuellement </h3>
        </article>
    {% endfor %}

    {% endblock main %}

